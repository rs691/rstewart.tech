	<style>
		:root {
			--text-xl: 1.5rem;
			--text-lg: 1.25rem;
			--text-base: 1rem;
			--gray-0: #f8f9fa;
			--gray-200: #6c757d;
			--theme-transition: 0.3s ease-in-out;
		}
	
.wrapper {
		max-width: 1200px;
		margin: 0 auto;
		padding: 2rem;
		background-color: var(--background-color);
		color: var(--text-accent-color);
	}
	.about {
		display: flex;
		flex-direction: column;
		gap: 3.5rem;
	}

	img {
		margin-top: 1.5rem;
		border-radius: 1.5rem;
		display: flex;
    flex-direction: column;
    align-items: center;
		max-width: 100%; /* Added to ensure responsiveness */
	}
	.about > :global(:first-child) {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 1.5rem;
	}

	section {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
		color: var(--gray-200);
	}

	.section-title {
		grid-column-start: 1;
		font-size: var(--text-xl);
		color: var(--gray-0);
	}

	.content {
		grid-column: 2 / 4;
	}

	.content :global(a) {
		text-decoration: 1px solid underline transparent;
		text-underline-offset: 0.25em;
		transition: text-decoration-color var(--theme-transition);
	}

	.content :global(a:hover),
	.content :global(a:focus) {
		text-decoration-color: currentColor;
	}

	@media (min-width: 50em) {
		.about {
			display: grid;
			grid-template-columns: 1fr 60% 1fr;
		}

		.about > :global(:first-child) {
			grid-column-start: 2;
		}

		section {
			display: contents;
			font-size: var(--text-lg);
		}
	}
	.content {
			grid-column: 2 / 4;
		}
	.content :global(p) {
			margin: 0;
			line-height: 1.5;
			color: var(--gray-200);
			font-size: var(--text-base);
		}
</style>
 
