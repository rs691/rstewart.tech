---
import Icon from "./Icon.astro";
---

<footer>
  <div class="group">
    <p>Â© 2023 Robert Stewart</p>
    <p>All rights reserved.</p>
  </div>
  <div class="socials">
    <a href="https://github.com/me" target="_blank" rel="noopener noreferrer" class="social-icon">
      <Icon icon="github" />
    </a>
    <a href="https://linkedin.com/in/me" target="_blank" rel="noopener noreferrer" class="social-icon">
      <Icon icon="linkedin-logo" />
    </a>
  </div>
</footer>
<style>
  .social-icon {
    color: var(--gray-400);
    font-size: var(--text-xl);
    transition: color var(--theme-transition);
    display: flex;
  }

  .social-icon:hover,
  .social-icon:focus {
    color: var(--accent-regular);
  }

  footer p {
    margin: 0;
    font-size: var(--text-sm);
  }

  footer {
    display: flex;
    flex-direction: column;
    background-color: var(--bg-footer);
    justify-content: center;
    align-items: center;
    gap: 3rem;
    margin-top: auto;
    padding: 3rem 2rem 3rem;
    text-align: center;
    color: var(--gray-400);
    font-size: var(--text-);
  }

  footer a {
    color: var(--gray-400);
    text-decoration: 1px solid underline transparent;
    text-underline-offset: 0.25em;
    transition: text-decoration-color var(--theme-transition);
  }

  footer a:hover,
  footer a:focus {
    text-decoration-color: currentColor;
  }

  .group {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    justify-content: center;
    align-items: center;
  }
  .socials {
    display: flex;
    flex-wrap: wrap;
    gap: 0.625rem;
    font-size: var(--text-xl);
    size: 1.2em;
    justify-content: center;
    align-items: center;
  }

  @media (min-width: 50em) {
    footer {
      flex-direction: row;
      justify-content: center; /* Center horizontally */
      align-items: center;     /* Center vertically */
      padding: 2.5rem 5rem;
    }
    .group {
      align-items: center;
      justify-content: center;
    }
    .socials {
      justify-content: center;
      align-items: center;
    }
  }
</style>
